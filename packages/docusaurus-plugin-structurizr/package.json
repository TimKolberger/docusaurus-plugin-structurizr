{
  "name": "docusaurus-plugin-structurizr",
  "description": "This plugin allows you to use structurizr diagrams in your docusaurus documentation.",
  "keywords": [
    "docusaurus",
    "docusaurus-plugin",
    "documentation",
    "diagrams",
    "structurizr",
    "mermaid",
    "plantuml"
  ],
  "version": "0.5.0",
  "type": "module",
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TimKolberger/docusaurus-plugin-structurizr.git",
    "directory": "packages/docusaurus-plugin-structurizr"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "concurrently pnpm:lint:*",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:format": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest --run --coverage"
  },
  "devDependencies": {
    "@docusaurus/types": "3.4.0",
    "@docusaurus/utils-validation": "3.4.0",
    "@dps/eslint-config": "workspace:*",
    "@dps/typescript-config": "workspace:*",
    "@types/node": "20.14.13",
    "@vitest/coverage-v8": "2.0.5",
    "rimraf": "6.0.1",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  },
  "dependencies": {
    "globby": "^11.1.0"
  },
  "peerDependencies": {
    "@docusaurus/utils-validation": ">3.0.1"
  }
}
